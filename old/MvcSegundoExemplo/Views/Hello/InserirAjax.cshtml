@model MvcSegundoExemplo.Models.Aluno
@{
    ViewBag.Title = "InserirAjax";
}

<h2>InserirAjax</h2>

@using (Ajax.BeginForm("inserirAlunoAjax",new AjaxOptions
                           {
                               InsertionMode = InsertionMode.InsertAfter,
                               LoadingElementId = "progress",
                               UpdateTargetId = "resultado"
                           }))
{
    @Html.LabelFor(d => d.Nome)
    @Html.TextBoxFor(d => d.Nome)
    <Br />
    @Html.LabelFor(d => d.Idade)
    @Html.TextBoxFor(d => d.Idade)  
    @Html.ValidationMessageFor(d=>d.Idade)  
    <Br />
    @Html.LabelFor(d => d.Cidade)
    @Html.TextBoxFor(d => d.Cidade)        
    <Br />
    <input type="submit" value="Inserir"/>
    @Html.ValidationSummary("Mensagens de Erro")
}

<div id="resultado"></div>